version: "2"
sql:
  - engine: "mysql"
    queries: "sql/queries/"
    schema: "sql/schema/schema.sql"
    gen:
      go:
        package: "models"
        out: "internal/models"
        emit_json_tags: true
        emit_prepared_queries: false
        emit_interface: true
        emit_exact_table_names: false
        emit_empty_slices: true
        overrides:
          - db_type: "varchar"
            nullable: true
            go_type:
              type: "string"
              pointer: true
          - db_type: "text"
            nullable: true
            go_type:
              type: "string"
              pointer: true
          - db_type: "char"
            nullable: true
            go_type:
              type: "string"
              pointer: true
          - db_type: "mediumtext"
            nullable: true
            go_type:
              type: "string"
              pointer: true
          - db_type: "longtext"
            nullable: true
            go_type:
              type: "string"
              pointer: true
          - db_type: "tinytext"
            nullable: true
            go_type:
              type: "string"
              pointer: true
          - db_type: "int"
            nullable: true
            go_type:
              type: "int32"
              pointer: true
          - db_type: "bigint"
            nullable: true
            go_type:
              type: "int64"
              pointer: true
          - db_type: "smallint"
            nullable: true
            go_type:
              type: "int16"
              pointer: true
          - db_type: "tinyint"
            nullable: true
            go_type:
              type: "int8"
              pointer: true
          - db_type: "float"
            nullable: true
            go_type:
              type: "float32"
              pointer: true
          - db_type: "double"
            nullable: true
            go_type:
              type: "float64"
              pointer: true
          - db_type: "decimal"
            nullable: true
            go_type:
              type: "string"
              pointer: true
          - db_type: "datetime"
            nullable: true
            go_type:
              import: "time"
              type: "Time"
              pointer: true
          - db_type: "timestamp"
            nullable: true
            go_type:
              import: "time"
              type: "Time"
              pointer: true
          - db_type: "date"
            nullable: true
            go_type:
              import: "time"
              type: "Time"
              pointer: true
          - db_type: "time"
            nullable: true
            go_type:
              import: "time"
              type: "Time"
              pointer: true
          - db_type: "boolean"
            nullable: true
            go_type:
              type: "bool"
              pointer: true
          - db_type: "bool"
            nullable: true
            go_type:
              type: "bool"
              pointer: true